<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051021"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_16x"
        android:src="@drawable/logo_white"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="284dp"
            android:layout_height="278dp"
            android:src="@drawable/astronaut"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_margin_24x"
            android:text="Здесь пока тихо"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/activity_empty_favorites_to_upcoming_events_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/view_margin_24x"
        android:background="@drawable/bg_upcoming_events_activity_favourites_button"
        android:drawableStart="@drawable/ic_main_menu"
        android:drawablePadding="10dp"
        android:paddingHorizontal="@dimen/view_padding_16x"
        android:text="На главную"
        android:textAllCaps="false"
        android:textColor="@color/activity_upcoming_events_button_text_color"
        android:textSize="@dimen/view_button_text_size"
        />


</FrameLayout>