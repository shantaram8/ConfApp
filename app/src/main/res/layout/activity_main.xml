<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/black"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/bg"
            android:contentDescription="@string/activity_main_background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="14dp"
                android:src="@drawable/logo_white"
                android:contentDescription="@string/activity_main_logo_description"
                />

            <ImageView
                android:layout_width="@dimen/activity_main_image_view_corona_size"
                android:layout_height="@dimen/activity_main_image_view_corona_size"
                android:layout_gravity="bottom|center"
                android:src="@drawable/corona2_2"
                android:contentDescription="@string/string_activity_main_corona_logo"
                />
        </LinearLayout>

    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_main_title_text_size"
        android:textColor="@color/title_text_color"
        android:text="@string/activity_main_text_view_name"
        android:layout_marginTop="@dimen/activity_main_text_view_margin"
        android:layout_marginHorizontal="@dimen/activity_main_text_view_margin"
        />

    <EditText
        android:id="@+id/activity_main_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_main_edit_text_margin"
        android:paddingVertical="13dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="#33000000"
        android:hint="@string/activity_main_hint_edit_text"
        android:background="@drawable/edit_text_bg"
        android:inputType="text"
        android:autofillHints=""
        />

    <Button
        android:id="@+id/activity_main_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="@string/activity_main_continue_button"
        android:textColor="@drawable/text_color"
        android:enabled="false"
        android:textSize="@dimen/activity_main_continue_button_text_size"
        android:background="@drawable/button_bg"
        />


</LinearLayout>