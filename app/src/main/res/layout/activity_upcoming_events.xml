<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.presentation.UpcomingEventsActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_upcoming_events_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_heart"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="47dp"
        android:drawablePadding="4dp"
        android:background="@drawable/bg_upcoming_events_activity_button_favourites"
        android:text="В избранные"
        android:textSize="16dp"
        android:layout_gravity="bottom|center"
        android:textColor="#2A81DD"
        android:textAllCaps="false"
        />


</FrameLayout>
